<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Title -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_title"
        style="@style/Heading.Dark"

        android:layout_marginTop="@dimen/heading_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Subtitle -->
    <TextView
        android:id="@+id/app_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_subtitle"
        style="@style/Subheading.Dark"

        android:layout_marginTop="@dimen/subheading_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title" />

    <!-- Get Started action button -->
    <Button
        android:id="@+id/button_get_started"
        android:text="@string/onboarding_action_button"
        style="@style/Button.Action.WithArrow"

        android:layout_marginBottom="@dimen/onboard_action_btn_margin_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_not_now"
        />

    <!-- Button Not Now -->
    <Button
        android:id="@+id/button_not_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button.Borderless.Light"
        android:text="@string/not_now"

        android:layout_marginBottom="@dimen/onboard_secondary_btn_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>